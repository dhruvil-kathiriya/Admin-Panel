<%- include("header") %>

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card ">
                            <div class="card mb-0">
                                <h5 class="card-header">Profile Details</h5>
                                <!-- Account -->
                                <div class="card-body d-flex">
                                    <div class="col col-md-3">
                                        <img src="<%= adminData.AdminImage%>" alt="user-avatar"
                                            class="d-block rounded me-3" height="100" width="100" id="uploadedAvatar" />

                                    </div>
                                    <div class="col col-md-6">
                                        <a href="/admin/updateprofile/<%= adminData._id%>" class="btn btn-primary">
                                            Edit Profile
                                        </a>
                                    </div>
                                </div>
                                <hr class="my-0" />
                                <div class="card-body">
                                    <form id="formAccountSettings" method="POST" onsubmit="return false">
                                        <div class="row">
                                            <div class="mb-3 col-md-12">
                                                <label for="firstName" class="form-label">First Name :</label>
                                                <%= sname[0] %>
                                            </div>
                                            <div class="mb-3 col-md-12">
                                                <label for="lastName" class="form-label">Last Name :</label>
                                                <%= sname[1] %>
                                            </div>
                                            <div class="mb-3 col-md-12">
                                                <label for="email" class="form-label">E-mail :</label>
                                                <%= adminData.email%>
                                            </div>
                                            <div class="mb-3 col-md-12">
                                                <label for="email" class="form-label">Gender :</label>
                                                <%= adminData.gender %>
                                            </div>
                                            <div class="mb-3 col-md-12">
                                                <label for="email" class="form-label">City :</label>
                                                <%= adminData.city%>
                                            </div>
                                            <div class="mb-3 col-md-12">
                                                <label for="email" class="form-label">Hobby :</label>
                                                <%= adminData.hobby %>
                                            </div>
                                        </div>

                                </div>
                            </div>

                            </form>
                        </div>
                        <!-- /Account -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    </div>
    <%- include("footer") %>